{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "allowJs": true,
        "checkJs": false,
        "module": "ES2020",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "paths": {
            "~brixi/*": [
                "framework/*"
            ],
            "~controllers/*": ["controllers/*"],
            "~types/*": ["types/*"],
            "~components/*": ["components/*"],
            "~utils/*": ["utils/*"]
        },
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "_types",
    },
    "include": [
        "src"
    ],
    "exclude": ["lib"]
}