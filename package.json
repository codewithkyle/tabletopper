{
  "scripts": {
    "update": "npm update && run-p install:*",
    "install:pkg": "node ./build/bundle.js",
    "install:brixi": "brixi && mv ./brixi/brixi.css ./src/styles/brixi.css && rmdir ./brixi",
    "install:ui": "install-ui --framework=./src/framework --audio=./public/audio",
    "build": "run-p build:*",
    "build:js": "twist --src=./src --outDir=./public/js --type=esbuild",
    "build:css": "cssmonster",
    "production": "run-p install:* && npm run build && asset-manager",
    "watch": "run-p watch:*",
    "watch:src": "npm-watch",
    "watch:server": "serve ./public -s",
    "deploy": "cp ./build/prod.config.js ./public/config.js && node ./build/deploy.js"
  },
  "devDependencies": {
    "@codewithkyle/asset-manager": "^1.0.2",
    "@codewithkyle/jsql": "^1.1.2",
    "@codewithkyle/modal-maker": "^1.1.1",
    "@codewithkyle/notifyjs": "^3.1.0",
    "@codewithkyle/pubsub": "^1.1.1",
    "@codewithkyle/router": "^2.1.0",
    "@codewithkyle/supercomponent": "^1.3.0",
    "@codewithkyle/twist": "^2.0.2",
    "@codewithkyle/uuid": "^1.0.1",
    "brixi": "^0.6.2",
    "brixi-ui": "^0.4.6",
    "cssmonster": "^0.5.0",
    "dayjs": "^1.10.7",
    "esbuild": "^0.14.39",
    "esinstall": "^1.1.7",
    "flatpickr": "^4.6.9",
    "fuse.js": "^6.5.3",
    "gh-pages": "^3.2.3",
    "glob": "^7.2.0",
    "lit-html": "^1.0.0",
    "marked": "^4.0.12",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "sass": "^1.47.0",
    "serve": "^13.0.2",
    "tooltipper": "^1.1.3"
  },
  "bundle": [
    "@codewithkyle/jsql",
    "@codewithkyle/pubsub",
    "@codewithkyle/router",
    "@codewithkyle/supercomponent",
    "@codewithkyle/uuid",
    "@codewithkyle/modal-maker",
    "@codewithkyle/notifyjs",
    "flatpickr",
    "lit-html",
    "lit-html/directives/unsafe-html.js",
    "tooltipper",
    "fuse.js",
    "dayjs",
    "marked"
  ],
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
      "quiet": false
    }
  }
}
